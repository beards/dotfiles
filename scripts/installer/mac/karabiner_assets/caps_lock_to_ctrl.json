{
  "_document_": "https://karabiner-elements.pqrs.org/docs/json/",
  "title": "CapsLock",
  "rules": [
    {
      "description": "Changes CapsLock to Ctrl if pressed with other keys, or keeps CapsLock if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
