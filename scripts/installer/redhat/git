#!/bin/bash

set -e

GIT_VERSION=2.44.0
PREFIX=/usr/local
SRC_DIR=/usr/src

echo "üîß Installing dependencies..."
dnf groupinstall -y "Development Tools"
dnf install -y curl-devel expat-devel gettext-devel \
    openssl-devel perl-CPAN perl-devel zlib-devel wget tar

echo "‚¨áÔ∏è Downloading Git source..."
cd "$SRC_DIR"
wget -c https://mirrors.edge.kernel.org/pub/software/scm/git/git-${GIT_VERSION}.tar.gz
tar -xzf git-${GIT_VERSION}.tar.gz
cd git-${GIT_VERSION}

echo "‚öôÔ∏è Building Git ${GIT_VERSION}..."
make prefix=${PREFIX} all
make prefix=${PREFIX} install

echo "‚úÖ Git ${GIT_VERSION} installed to ${PREFIX}/bin/git"

